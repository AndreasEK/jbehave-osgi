<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.jbehave.osgi</groupId>
		<artifactId>org.jbehave.osgi</artifactId>
		<version>0.0.2-SNAPSHOT</version>
	</parent>
	<artifactId>org.jbehave.osgi.examples.bnd.trader.fragment</artifactId>
	<name>JBehave OSGi : Example Trader Scenarios Fragment - BND</name>
	<description>Builded using POM-FIRST method with BND Tool.</description>
	<packaging>bundle</packaging>

	<properties>
		<jbehave-examples.version>3.5-SNAPSHOT</jbehave-examples.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.jbehave</groupId>
			<artifactId>jbehave-trader-example</artifactId>
			<version>${jbehave-examples.version}</version>
		</dependency>
		<dependency>
			<groupId>org.jbehave.osgi</groupId>
			<artifactId>org.jbehave.osgi.services</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<unpackBundle>true</unpackBundle>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Version>1.1.0.qualifier</Bundle-Version>
						<Import-Package>org.hamcrest, org.jbehave.core, junit.framework,
							org.apache.commons.lang, org.apache.commons.lang.builder,
							org.jbehave.core.annotations, org.jbehave.core.configuration,
							org.jbehave.core.embedder, org.jbehave.core.failures,
							org.jbehave.core.i18n, org.jbehave.core.io,
							org.jbehave.core.junit, org.jbehave.core.model,
							org.jbehave.core.parsers, org.jbehave.core.reporters,
							org.jbehave.core.steps, org.jbehave.osgi.configuration,
							org.jbehave.osgi.io, org.jbehave.osgi.reporters, org.junit,
							org.junit.runner</Import-Package>
						<Export-Package>org.jbehave.osgi.examples.trader.annotations.*</Export-Package>
						<Fragment-Host>org.jbehave.osgi.services</Fragment-Host>
						<Embed-Dependency>jbehave-trader-example;scope=compile;inline=true</Embed-Dependency>
						<Embed-Transitive>true</Embed-Transitive>
						<_exportcontents>org.jbehave.examples.trader.*</_exportcontents>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>