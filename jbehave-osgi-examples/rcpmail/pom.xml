<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.jbehave.osgi.examples</groupId>
		<artifactId>org.jbehave.osgi.examples</artifactId>
		<version>0.0.2-SNAPSHOT</version>
	</parent>

	<artifactId>org.jbehave.osgi.examples.rcpmail</artifactId>
	<packaging>pom</packaging>
	<name>JBehave OSGi RCPmail Example</name>
	<description>Example showing how to build an application and run JBehave stories via a MANIFEST-FIRST approach using Tycho.</description>

	<properties>
		<tycho-version>0.13.0</tycho-version>
		<tycho-groupid>org.eclipse.tycho</tycho-groupid>
		<swtbot-site>http://download.eclipse.org/technology/swtbot/helios/dev-build/update-site</swtbot-site>
		<eclipse-site>http://download.eclipse.org/releases/indigo</eclipse-site>
		<jbehave-osgi-p2-repo>file://${basedir}/../../../jbehave-osgi-equinox/org.jbehave.osgi.equinox.repository/target/repository</jbehave-osgi-p2-repo>
	</properties>

	<repositories>
		<repository>
			<id>eclipse</id>
			<layout>p2</layout>
			<url>${eclipse-site}</url>
		</repository>
		<repository>
			<id>swtbot</id>
			<layout>p2</layout>
			<url>${swtbot-site}</url>
		</repository>
		<repository>
			<id>jbehave-osgi-p2</id>
			<layout>p2</layout>
			<url>${jbehave-osgi-p2-repo}</url>
		</repository>
	</repositories>

	<profiles>
		<profile>
			<id>examples-pom-first</id>
			<!-- this is here just to maintenance -->
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<modules>
			</modules>
		</profile>
		<profile>
			<id>examples-manifest-first</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>
				<module>org.jbehave.osgi.examples.rcpmail.application</module>
				<module>org.jbehave.osgi.examples.rcpmail.feature</module>
				<module>org.jbehave.osgi.examples.rcpmail.stories</module>
				<module>org.jbehave.osgi.examples.rcpmail.product</module>
			</modules>
		</profile>
	</profiles>

	<build>
		<plugins>

			<!-- enable tycho build -->
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>

			<!-- configure target platform resolution -->
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<pomDependencies>consider</pomDependencies>
					<resolver>p2</resolver>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-compiler-plugin</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<encoding>UTF-8</encoding>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
