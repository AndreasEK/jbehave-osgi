<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.jbehave.osgi.examples</groupId>
		<artifactId>org.jbehave.osgi.examples.trader.pomfirst</artifactId>
		<version>0.0.2-SNAPSHOT</version>
	</parent>
	<artifactId>org.jbehave.osgi.examples.trader.bundle.embedders</artifactId>
	<name>JBehave OSGi Trader Example : Embedders Bundle</name>
	<description>A bundle of JBehave Trader Example exporting only the embedders, stories, steps and related stuffs.</description>
	<packaging>bundle</packaging>

	<dependencies>
		<dependency>
			<groupId>org.jbehave</groupId>
			<artifactId>jbehave-trader-example</artifactId>
			<version>${jbehave.core.version}</version>
		</dependency>
		<dependency>
			<groupId>org.jbehave.osgi</groupId>
			<artifactId>org.jbehave.osgi.services</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<unpackBundle>true</unpackBundle>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Version>${jbehave-osgi.version}</Bundle-Version>
						<!-- <Import-Package>org.jbehave.examples.trader.*,junit.framework, -->
						<!-- org.apache.commons.lang, org.apache.commons.lang.builder, -->
						<!-- org.hamcrest, org.jbehave.core, org.jbehave.core.annotations, -->
						<!-- org.jbehave.core.configuration, org.jbehave.core.embedder, -->
						<!-- org.jbehave.core.failures, org.jbehave.core.i18n, -->
						<!-- org.jbehave.core.io, org.jbehave.core.junit, -->
						<!-- org.jbehave.core.model, org.jbehave.core.parsers, -->
						<!-- org.jbehave.core.reporters, org.jbehave.core.steps, org.junit, -->
						<!-- org.junit.runner, org.jbehave.osgi.configuration, -->
						<!-- org.jbehave.osgi.io, org.jbehave.osgi.reporters</Import-Package> -->
						<!-- <Export-Package>org.jbehave.osgi.examples.trader.annotations.*</Export-Package> -->
						<Embed-Dependency>jbehave-trader-example;inline=true</Embed-Dependency>
						<Embed-Transitive>true</Embed-Transitive>
						<_exportcontents>org.jbehave.examples.trader,
							org.jbehave.examples.trader.converters,
							org.jbehave.examples.trader.steps,
							org.jbehave.examples.trader.stories</_exportcontents>
<!-- 						<_nouses>true</_nouses> -->
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>