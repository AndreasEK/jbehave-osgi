<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:cm="http://karaf.apache.org/xmlns/shell/v1.0.0"
	xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">
	
	<reference id="embedderService" interface="org.jbehave.osgi.services.EmbedderService"/>

	<cm:command-bundle>
		<cm:command name="jbehave/status">
			<cm:action class="org.jbehave.osgi.commands.StatusCommand">
				<cm:property name="embedderService" ref="embedderService" />
			</cm:action>
		</cm:command>
		<cm:command name="jbehave/runAnnotaddedEmbedder">
			<cm:action class="org.jbehave.osgi.commands.RunAnnotaddedEmbedderCommand">
				<cm:property name="embedderService" ref="embedderService" />
			</cm:action>
		</cm:command>
	</cm:command-bundle>

</blueprint>