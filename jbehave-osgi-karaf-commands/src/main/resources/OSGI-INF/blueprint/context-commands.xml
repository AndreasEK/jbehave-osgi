<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:cm="http://karaf.apache.org/xmlns/shell/v1.0.0"
	xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

	<reference id="embedderService" interface="org.jbehave.osgi.services.EmbedderService" />

	<cm:command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
		<command name="jbehave/status">
			<action class="org.jbehave.osgi.commands.StatusCommand">
				<property name="embedderService" ref="embedderService" />
			</action>
		</command>
		<command name="jbehave/runAnnotaddedEmbedder">
			<action class="org.jbehave.osgi.commands.RunAnnotaddedEmbedderCommand">
				<property name="embedderService" ref="embedderService" />
			</action>
			<completers xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
				<ref component-id="completer" />
				<null />
			</completers>
		</command>
	</cm:command-bundle>

	<bean id="completer"
		class="org.jbehave.osgi.commands.ClassNamesCompleter">
		<property name="embedderService" ref="embedderService" />
	</bean>

</blueprint>