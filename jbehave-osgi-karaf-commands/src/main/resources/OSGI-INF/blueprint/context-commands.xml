<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

	<reference id="embedderService" interface="org.jbehave.osgi.services.EmbedderService"/>

	<command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
		<command name="jbehave/status">
			<action class="org.jbehave.osgi.commands.StatusCommand">
				<property name="embedderService" ref="embedderService" />
			</action>
		</command>
		<command name="jbehave/runAsEmbeddables">
			<action class="org.jbehave.osgi.commands.RunAsEmbeddablesCommand">
				<property name="embedderService" ref="embedderService" />
			</action>
		</command>
	</command-bundle>

</blueprint>