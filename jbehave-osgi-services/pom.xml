<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://maven.apache.org/POM/4.0.0"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.jbehave.osgi</groupId>
		<artifactId>jbehave-osgi</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	<artifactId>jbehave-osgi-services</artifactId>
	<name>JBehave OSGi : Services Bundle</name>
	<description>Provides OSGi Services to interface to JBehave.</description>
	<packaging>bundle</packaging>

	<dependencies>
		<dependency>
			<groupId>org.jbehave</groupId>
			<artifactId>jbehave-core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.core</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.compendium</artifactId>
			<scope>provided</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<unpackBundle>true</unpackBundle>
<!-- 					<manifestLocation>target/classes/META-INF</manifestLocation> -->
					<instructions>
						<!-- <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName> -->
						<!-- <Bundle-Version>1.0.0.qualifier</Bundle-Version> -->
						<Export-Package>org.jbehave.osgi.services</Export-Package>
						<Private-Package>org.jbehave.osgi.services.impl</Private-Package>
						<Import-Package>org.apache.log4j,org.zeroturnaround.javarebel;resolution:=optional,org.python.*;resolution:=optional,org.mozilla.javascript;resolution:=optional,org.joda.*;resolution:=optional,org.jdom.*;resolution:=optional,org.jaxen.*;resolution:=optional,org.dom4j.*;resolution:=optional,org.codehaus.jettison.*;resolution:=optional,org.apache.xpath.*;resolution:=optional,org.apache.xml.utils.*;resolution:=optional,org.apache.tools.ant.*;resolution:=optional,org.apache.log;resolution:=optional,nu.xom;resolution:=optional,javax.security.*;resolution:=optional,net.sf.cglib.proxy;resolution:=optional,!javax.swing.*,!javax.servlet.*,javax.el;resolution:=optional,com.sun.*;resolution:=optional,sun.misc;resolution:=optional,sun.reflect;resolution:=optional,*</Import-Package>
						<Embed-Dependency>jbehave-core;scope=compile;inline=false,xstream;scope=compile;inline=false,xpp3_min;scope=compile;inline=false,plexus-utils;scope=compile;inline=false,freemarker;scope=compile;inline=false,paranamer;scope=compile;inline=false,junit-dep;scope=compile;inline=false</Embed-Dependency>
						<_exportcontents>!org.hamcrest,*</_exportcontents>
						<!-- <_exportcontents>!org.hamcrest,org.jbehave.*,com.thoughtworks.*,freemarker.*,org.xmlpull.*,org.codehaus.*,org.apache.*,org.zeroturnaround.*,org.dom4j.*,org.junit.*,junit.*,*</_exportcontents> -->
						<!-- <excludeDependencies>*;optional=true</excludeDependencies> -->
						<Embed-Directory>jars</Embed-Directory>
						<Embed-Transitive>true</Embed-Transitive>
						<Export-Service>org.jbehave.osgi.services.EmbedderService</Export-Service>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
