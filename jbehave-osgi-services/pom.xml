							,!org.apache.tools.ant.*,!nu.xom,!net.sf.cglib.proxy,!javax.el.*,!javax.servlet.*,!com.sun.*,!org.apache.log,!org.jaxen.*,!org.dom4j.*,*</Import-Package>
						<!-- <Require-Bundle>org.apache.cxf.bundle</Require-Bundle> -->
						<Embed-Dependency>jbehave-core;scope=compile;inline=true,plexus-utils;scope=compile;inline=false,freemarker;scope=compile;inline=false,paranamer;scope=compile;inline=false,junit-dep;scope=compile;inline=false</Embed-Dependency>
						<_exportcontents>org.jbehave.core.*</_exportcontents>
						<!-- <Embed-Directory>target/dependency</Embed-Directory> -->
						<!-- <Embed-StripGroup>true</Embed-StripGroup> -->
						<Embed-Transitive>true</Embed-Transitive>
						<Export-Service>org.jbehave.osgi.services.EmbedderService</Export-Service>
					</instructions>
					<unpackBundle>true</unpackBundle>
				</configuration>
			</plugin>
		</plugins>
