	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
			<resource>
				<directory>.</directory>
				<includes>
					<include>plugin.xml</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<manifestLocation>META-INF</manifestLocation>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Version>1.0.0.qualifier</Bundle-Version>
						<Export-Package>org.jbehave.osgi.services</Export-Package>
						<Private-Package>org.jbehave.osgi.services.impl</Private-Package>
						<!-- <Import-Package>org.slf4j;version="[1.6,2)";provider=paxlogging, 
							*</Import-Package> -->
