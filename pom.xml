<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.jbehave.osgi</groupId>
	<artifactId>org.jbehave.osgi</artifactId>
	<version>0.0.3-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>JBehave OSGi</name>
	<description>JBehave OSGi provides a OSGi integration layer for JBehave Core functionality.</description>

	<prerequisites>
		<maven>3.0.0</maven>
	</prerequisites>

	<properties>
		
		<!-- This is the version of the next realease to generated. It is used by tycho-version-plugin -->
		<next-release>0.0.3-SNAPSHOT</next-release>
				
		<tycho-version>0.14.0</tycho-version>
		<eclipse-site>http://download.eclipse.org/releases/indigo</eclipse-site>
		<jbehave.core.version>3.6-SNAPSHOT</jbehave.core.version>
		<jbehave.core.osgi.version>3.6.0.qualifier</jbehave.core.osgi.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<jbehave-web-version>3.5-SNAPSHOT</jbehave-web-version>
		<jbehave-core-version>3.6-SNAPSHOT</jbehave-core-version>
		<selenium.version>2.19.0</selenium.version>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.jbehave</groupId>
				<artifactId>jbehave-core</artifactId>
				<version>${jbehave.core.version}</version>
			</dependency>
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-api</artifactId>
				<version>1.6.4</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>org.osgi</groupId>
				<artifactId>org.osgi.core</artifactId>
				<version>4.3.0</version>
				<scope>provided</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.felix</groupId>
					<artifactId>maven-bundle-plugin</artifactId>
					<version>2.3.6</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>2.3.2</version>
					<configuration>
						<source>1.6</source>
						<target>1.6</target>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<profiles>
			<profile>
			<id>prepare-for-next-release</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<defaultGoal>org.eclipse.tycho:tycho-versions-plugin:set-version</defaultGoal>
				<plugins>
					<plugin>
						<groupId>org.eclipse.tycho</groupId>
						<artifactId>tycho-versions-plugin</artifactId>
						<version>${tycho-version}</version>
						<executions>
							<execution>
								<id>change-next-release</id>
								<goals>
									<goal>set-version</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<newVersion>${next-release}</newVersion>
						</configuration>
					</plugin>
				</plugins>
			</build>
			<modules>
				<module>jbehave-osgi-examples</module>
				<module>jbehave-osgi-equinox</module>
				<module>jbehave-osgi-services</module>
				<module>jbehave-osgi-web</module>
			</modules>
		</profile>
	
		<profile>
			<id>services</id>
			<!-- NOTE: we can't run services (bnd) in same reactor of equinox (tycho) -->
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<modules>
				<module>jbehave-osgi-services</module>
				<module>jbehave-osgi-web</module>
			</modules>
		</profile>
		<profile>
			<id>equinox</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<modules>
				<module>jbehave-osgi-equinox</module>
			</modules>
		</profile>
	</profiles>

	<developers />
	<contributors />

	<scm>
		<connection>scm:git:git://git.codehaus.org/jbehave-osgi.git</connection>
		<developerConnection>scm:git:ssh://git@git.codehaus.org/jbehave-osgi.git</developerConnection>
		<url>http://git.codehaus.org/gitweb.cgi?p=jbehave-osgi.git</url>
	</scm>
</project>
